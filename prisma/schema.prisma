datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int    @id @default(autoincrement())
  username String @unique
  email    String @unique
  password String
  role     Int    @default(0)
  Book     Book[]
}

model Book {
  id              Int      @id @default(autoincrement())
  title           String
  author          String
  publicationDate DateTime
  genres          String[]
  createdBy       User     @relation(fields: [createdById], references: [id])
  createdById     Int
}
